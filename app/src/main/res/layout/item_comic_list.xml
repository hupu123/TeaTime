<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_comic_height"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.hugh.teatime.view.FileImageView
            android:id="@+id/fiv_cover"
            android:layout_width="@dimen/item_comic_height"
            android:layout_height="@dimen/item_comic_height"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/txt_size_1" />

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_size_2" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_check"
            android:layout_width="@dimen/cb_size"
            android:layout_height="@dimen/cb_size"
            android:layout_margin="10dp"
            android:background="@drawable/cb_check_bg"
            android:button="@null"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>