<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTWhite"
            android:textSize="@dimen/txt_size_4"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_done_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/th_done_num"
            android:textColor="@color/colorTWhite"
            android:textSize="@dimen/txt_size_1"
            android:textStyle="bold" />

        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_1"
            android:background="@color/colorTWhite" />

        <TextView
            android:id="@+id/tv_target_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/th_target_num"
            android:textColor="@color/colorTWhite"
            android:textSize="@dimen/txt_size_1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTWhite"
            android:textSize="@dimen/txt_size_5"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:maxLines="1"
                android:textSize="@dimen/txt_size_1"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@drawable/btn_click_bg3_selector"
                android:stateListAnimator="@null"
                android:text="@string/delete" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/colorGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_down"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_click_bg6_selector"
                android:text="@string/th_down"
                android:textSize="@dimen/txt_size" />

            <SeekBar
                android:id="@+id/sb_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:progressDrawable="@drawable/sb_progress_color"
                android:thumb="@drawable/sb_thumb_selector" />

            <Button
                android:id="@+id/btn_up"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_click_bg6_selector"
                android:text="@string/th_up"
                android:textSize="@dimen/txt_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/colorGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_click_bg3_selector"
                android:stateListAnimator="@null"
                android:text="@string/confirm" />

            <View
                android:layout_width="@dimen/divider_height"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorGray" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_click_bg3_selector"
                android:stateListAnimator="@null"
                android:text="@string/cancel" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>