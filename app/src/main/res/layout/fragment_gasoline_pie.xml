<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray_1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/page_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_car_proportion_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <lecho.lib.hellocharts.view.PieChartView
                    android:id="@+id/pcv_car_proportion"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/chart_height" />

                <com.hugh.teatime.view.NoScrollGridView
                    android:id="@+id/nsgv_car_illustration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/page_margin"
                android:background="@color/colorWhite"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_invoice_proportion_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <lecho.lib.hellocharts.view.PieChartView
                    android:id="@+id/pcv_invoice_proportion"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/chart_height" />

                <com.hugh.teatime.view.NoScrollGridView
                    android:id="@+id/nsgv_invoice_illustration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="4" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>