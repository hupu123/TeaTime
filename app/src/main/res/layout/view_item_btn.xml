<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/item_click_bg1_selector"
    android:padding="15dp">

    <ImageView
        android:id="@+id/iv_ib_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/content_description"
        android:src="@mipmap/icon_rename_files"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_ib_txt_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/iv_ib_icon"
        android:textColor="@color/colorGray_2"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_ib_right_arrow"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:contentDescription="@string/content_description"
        android:src="@mipmap/icon_arrow_right" />

    <TextView
        android:id="@+id/tv_ib_txt_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/tv_ib_txt_name"
        android:layout_toStartOf="@id/iv_ib_right_arrow"
        android:ellipsize="end"
        android:gravity="end"
        android:singleLine="true"
        android:visibility="gone" />

</RelativeLayout>