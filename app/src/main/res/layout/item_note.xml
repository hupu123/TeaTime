<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_date_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_centerInParent="true"
            android:background="@color/colorGray_2" />

        <TextView
            android:id="@+id/tv_date_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_note_item_bg1"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingTop="2dp"
            android:paddingEnd="5dp"
            android:paddingBottom="2dp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/txt_size_3" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/edit_padding"
        android:paddingEnd="@dimen/edit_padding">

        <View
            android:id="@+id/v_point"
            android:layout_width="@dimen/point_size_1"
            android:layout_height="@dimen/point_size_1"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_note_circle_bg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/v_point"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <View
                android:layout_width="@dimen/point_size_1"
                android:layout_height="@dimen/divider_height"
                android:background="@color/colorGray_2" />

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_click_bg_selector3"
                android:orientation="vertical"
                android:padding="@dimen/edit_padding">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/txt_size_2" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/txt_size_3" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:drawableStart="@mipmap/icon_location_sw"
                    android:drawablePadding="2dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/txt_size_3" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/icon_time_sw"
                    android:drawablePadding="2dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/txt_size_3" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>